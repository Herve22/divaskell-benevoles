<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Groupes de l'√©v√©nement</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    #crn-notes {
      resize: none;
      overflow: hidden;
      min-height: 38px;
      transition: height 0.2s ease;
    }
    .creneau-section {
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      padding: 15px;
    }
    .creneau-section h6 {
      margin-bottom: 15px;
      font-weight: 600;
      color: #495057;
    }
  </style>
</head>
<body>
  <!-- Le menu sera inject√© ici automatiquement par menu.js -->
  
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 id="event-title">√âv√©nement</h1>
        <p id="event-info" class="text-muted"></p>
      </div>
      <a href="evenements.html" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour aux √©v√©nements
      </a>
    </div>

    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3><i class="bi bi-people-fill"></i> Groupes associ√©s</h3>
        <button class="btn btn-primary" id="newGroupBtn">
          <i class="bi bi-plus-circle"></i> Cr√©er un nouveau groupe
        </button>
      </div>
      <div class="card-body">
        <ul id="groupes-list" class="list-group"></ul>
      </div>
    </div>
  </div>

  <!-- Modal Cr√©ation Groupe -->
  <div class="modal fade" id="modalNewGroupe" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">‚ûï Cr√©er un nouveau groupe</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form id="formNewGroupe" onsubmit="createNewGroupe(event)">
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Nom du groupe <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="groupeNom" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Description</label>
              <textarea class="form-control" id="groupeDesc" rows="3"></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Responsable</label>
              <select class="form-select" id="groupeResp">
                <option value="">-- Aucun --</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary">üíæ Cr√©er le groupe</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal √âdition Groupe -->
  <div class="modal fade" id="modalEditGroupe" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">‚úèÔ∏è Modifier le groupe</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form id="formEditGroupe" onsubmit="updateGroupe(event)">
          <div class="modal-body">
            <input type="hidden" id="editGroupeId">
            <div class="mb-3">
              <label class="form-label">Nom du groupe</label>
              <input type="text" class="form-control" id="editGroupeNom" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Description</label>
              <textarea class="form-control" id="editGroupeDesc" rows="3"></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Responsable</label>
              <select class="form-select" id="editGroupeResp">
                <option value="">-- Aucun --</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary">üíæ Enregistrer</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Cr√©neaux -->
  <div class="modal fade" id="modalCreneaux" tabindex="-1">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">üìÖ Cr√©neaux - <span id="crn-group-name"></span></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <!-- Bouton pour afficher le formulaire -->
          <div class="mb-3">
            <button type="button" class="btn btn-success" id="btnToggleForm">
              <i class="bi bi-plus-circle"></i> Ajouter un cr√©neau
            </button>
          </div>

          <!-- Formulaire d'ajout (cach√© par d√©faut) -->
          <form id="formAddCreneau" onsubmit="addCreneau(event)" class="mb-4" style="display: none;">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h6 class="mb-0">‚ûï Ajouter un cr√©neau</h6>
              <button type="button" class="btn-close" id="btnCloseForm" aria-label="Fermer"></button>
            </div>

            <!-- D√âBUT DU NOUVEAU LAYOUT 2 COLONNES -->
            <div class="row g-3">
              <!-- Colonne D√âBUT -->
              <div class="col-md-6">
                <div class="creneau-section">
                  <h6><i class="bi bi-play-circle"></i> D√©but</h6>
                  <div class="mb-3">
                    <label class="form-label">Date <span class="text-danger">*</span></label>
                    <input type="date" class="form-control" id="crn-debut-date" required>
                  </div>
                  <div>
                    <label class="form-label">Heure <span class="text-danger">*</span></label>
                    <input type="time" class="form-control" id="crn-debut-time" required>
                  </div>
                </div>
              </div>

              <!-- Colonne FIN -->
              <div class="col-md-6">
                <div class="creneau-section">
                  <h6><i class="bi bi-stop-circle"></i> Fin</h6>
                  <div class="mb-3">
                    <label class="form-label">Date <span class="text-danger">*</span></label>
                    <input type="date" class="form-control" id="crn-fin-date" required>
                  </div>
                  <div>
                    <label class="form-label">Heure <span class="text-danger">*</span></label>
                    <input type="time" class="form-control" id="crn-fin-time" required>
                  </div>
                </div>
              </div>
            </div>

            <!-- Ligne Min/Max/Bouton -->
            <div class="row g-3 mt-3">
              <div class="col-md-3">
                <label class="form-label">Min</label>
                <input type="number" class="form-control" id="crn-nb-min" value="1" min="0">
              </div>
              <div class="col-md-3">
                <label class="form-label">Max</label>
                <input type="number" class="form-control" id="crn-nb-max" value="3" min="0">
              </div>
              <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-success w-100">
                  <i class="bi bi-check-lg"></i> Ajouter
                </button>
              </div>
            </div>

            <!-- Notes -->
            <div class="row mt-3">
              <div class="col-12">
                <label class="form-label">Notes</label>
                <textarea class="form-control" id="crn-notes" placeholder="Notes optionnelles" rows="2"></textarea>
              </div>
            </div>
          </form>

          <!-- Liste des cr√©neaux -->
          <div class="table-responsive">
            <table class="table table-striped" id="crn-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>D√©but</th>
                  <th>Fin</th>
                  <th>Min</th>
                  <th>Max</th>
                  <th>Notes</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr><td colspan="7" class="text-center">Chargement...</td></tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/menu.js"></script>
  <script src="js/eventgroupes.js"></script>
</body>
</html>
