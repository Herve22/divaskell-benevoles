<body>
  <div class="container mt-3">
    <h4 class="mb-3"><i class="bi bi-list-task text-success me-2"></i>Mes Inscriptions</h4>
    <p class="text-muted mb-4">Gérez vos inscriptions aux créneaux de bénévolat</p>

    <div id="stats" class="stats-cards"></div>
    <hr>
    <div id="creneaux-container" class="card-list text-center text-muted">Chargement...</div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/bottom-nav.js"></script>
  <script>
  document.addEventListener('DOMContentLoaded', async () => {
    const user = JSON.parse(localStorage.getItem('user') || 'null');
    if (!user) {
      document.getElementById('creneaux-container').innerHTML = '<div class="alert alert-warning">Connectez-vous pour voir vos inscriptions.</div>';
      return;
    }

    try {
      const res = await fetch(\`/api/inscriptions?email=\${encodeURIComponent(user.email)}\`);
      const data = await res.json();
      if (!data.ok) throw new Error(data.error || "Erreur serveur");

      // --- Stats
      const total = data.inscriptions.length;
      const confirmees = data.inscriptions.filter(i => i.statut === "confirmée").length;
      const aVenir = data.inscriptions.filter(i => new Date(i.debut) > new Date()).length;
      document.getElementById('stats').innerHTML = `
        <div class="card"><h3>${total}</h3><p class="text-muted small">Inscriptions totales</p></div>
        <div class="card"><h3>${confirmees}</h3><p class="text-muted small">Confirmées</p></div>
        <div class="card"><h3>${aVenir}</h3><p class="text-muted small">À venir</p></div>`;

      // --- Liste
      if (!total) {
        document.getElementById('creneaux-container').innerHTML = '<div class="alert alert-info">Aucune inscription trouvée.</div>';
        return;
      }

      document.getElementById('creneaux-container').innerHTML = data.inscriptions.map(c => `
        <div class="creneau-card text-start">
          <h6 class="mb-1"><i class="bi bi-calendar3 text-primary"></i> ${c.date_txt || c.debut.split("T")[0]}</h6>
          <div class="small text-muted mb-2">${c.groupe_nom || 'Groupe inconnu'} — ${c.debut.slice(11,16)} → ${c.fin.slice(11,16)}</div>
          <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-${c.statut === 'confirmée' ? 'success' : 'secondary'}">${c.statut || 'En attente'}</span>
            <div class="d-flex gap-2">
              <button class="btn btn-outline-primary btn-sm" onclick="window.location='/public/creneaux-publics.html#${c.creneau_id}'">
                <i class="bi bi-eye"></i>
              </button>
              <button class="btn btn-outline-danger btn-sm" onclick="annulerInscription(${c.id})">
                <i class="bi bi-x-circle"></i>
              </button>
            </div>
          </div>
        </div>`).join("");

    } catch (err) {
      console.error("[MesInscriptions]", err);
      document.getElementById('creneaux-container').innerHTML = '<div class="alert alert-danger">Erreur serveur.</div>';
    }
  });

  async function annulerInscription(id) {
    if (!confirm("Voulez-vous vraiment annuler cette inscription ?")) return;
    try {
      const res = await fetch(\`/api/inscriptions/\${id}/cancel\`, { method: "POST" });
      const data = await res.json();
      if (data.ok) {
        alert("Inscription annulée. Un email a été envoyé.");
        location.reload();
      } else throw new Error(data.error);
    } catch (e) {
      alert("Erreur lors de l’annulation : " + e.message);
    }
  }
  </script>
</body>
</html>
